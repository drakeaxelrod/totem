if SHIELD_TOTEM_LEFT

config ZMK_KEYBOARD_NAME
    default "TOTEM"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

endif

if SHIELD_TOTEM_LEFT || SHIELD_TOTEM_RIGHT

config ZMK_SPLIT
    default y

endif

# ── Dongle mode: USB receiver + both halves as peripherals ──

if SHIELD_TOTEM_DONGLE_CENTRAL

config ZMK_KEYBOARD_NAME
    default "TOTEM"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

config ZMK_SPLIT
    default y

config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
    default 2

config BT_MAX_CONN
    default 7

config BT_MAX_PAIRED
    default 7

endif

if SHIELD_TOTEM_DONGLE_LEFT || SHIELD_TOTEM_DONGLE_RIGHT

config ZMK_SPLIT
    default y

endif

# ── Settings reset with correct flash partition ──

if SHIELD_TOTEM_SETTINGS_RESET

config ZMK_SETTINGS_RESET_ON_START
    default y

config ZMK_BLE_CLEAR_BONDS_ON_START
    default y

endif
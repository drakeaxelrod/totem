        // --- Caps word: both index fingers ---
        combo_capsw {
            timeout-ms = <18>;
            require-prior-idle-ms = <150>;
            key-positions = <13 16>;
            bindings = <&caps_word>;
            layers = <BASE NAV NUM>;
        };
    };
};

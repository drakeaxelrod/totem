            layers = <BASE NAV NUM>;
        };

        // --- Left horizontal combos: clipboard (Linux: Ctrl) ---
        combo_cut {
            timeout-ms = <18>;
            require-prior-idle-ms = <150>;
            key-positions = <22 24>;
            bindings = <&kp LC(X)>;
            layers = <BASE NAV NUM>;
